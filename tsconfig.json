{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "es5",
    "module": "commonjs",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
