{
  "name": "npm-starter",
  "version": "1.0.0",
  "description": "A project template for typescript npm packages",
  "author": "yumii.saiko <yumii.saiko@gmail.com>",
  "homepage": "https://github.com/YumeT023/npm-starter#readme",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "keywords": [],
  "bugs": {
    "url": "https://github.com/YumeT023/npm-starter/issues",
    "email": "yumii.saiko@gmail.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "testRegex": "(/__tests__/.*?\\.(spec|test)\\.tsx?)$"
  },
  "scripts": {
    "clean": "rm -rf lib/*",
    "build": "yarn run clean && tsc --p tsconfig.json",
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "lint:fix": "yarn lint -- --fix",
    "test": "jest",
    "format": "prettier --ignore-path .gitignore --write \"src/**/*.{js,ts,tsx}\" \"./**/*.{json,yml,yaml}\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
